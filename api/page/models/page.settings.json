{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "name": "Page",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "maxLength": 200
    },
    "banner_background_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "banner": {
      "type": "dynamiczone",
      "components": [
        "media.single-video",
        "media.single-image",
        "media.images",
        "media.files",
        "media.single-file",
        "text.heading",
        "text.paragraph",
        "text.quote",
        "section.text-right-image-left",
        "section.text-center-image-either-side",
        "section.heading-left-image-right",
        "section.image-right-text-left",
        "section.image-center-text-either-side",
        "section.heading-right-image-left",
        "widget.divider",
        "widget.button"
      ],
      "max": 6,
      "required": false
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "media.single-video",
        "media.single-image",
        "media.images",
        "media.files",
        "media.single-file",
        "text.heading",
        "text.paragraph",
        "text.quote",
        "section.text-right-image-left",
        "section.text-center-image-either-side",
        "section.heading-left-image-right",
        "section.image-right-text-left",
        "section.image-center-text-either-side",
        "section.heading-right-image-left",
        "widget.divider",
        "widget.button",
        "collections.blog-posts",
        "collections.offerings",
        "collections.blogs",
        "collections.services"
      ],
      "required": true,
      "min": 1
    },
    "meta_description": {
      "type": "text",
      "required": true,
      "maxLength": 400,
      "minLength": 20
    },
    "menu_item": {
      "model": "menu-item",
      "via": "page"
    }
  }
}
